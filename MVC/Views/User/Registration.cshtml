                            </div>


                            <div class="mb-3 ">
                                <label for="exampleInputEmail1" asp-for="Email" class="form-label">Email address</label>
                                <input type="email" class="form-control" asp-for="Email" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" onkeyup="errorfunction()">
                                <span class="text-danger" id="requiredEmail" asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputPassword1" class="form-label">Password</label>
                                <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" onkeyup="errorfunction()">
                                <span class="text-danger" id="requiredpswd" asp-validation-for="Password"></span>
                            <br />
                                <label for="exampleInputPassword2" class="form-label mt-3">Confirm Password</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" id="exampleInputPassword2" onkeyup="errorfunction()">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                @*<label for="exampleInputPassword1" class="form-label mt-3">Confirm Password</label>
                                <input type="password" class="form-control" id="cnfrmpswd" onfocusout="PassValid()" onkeyup="errorfunction()">*@

                                @*<span class="text-danger" style="display:none" id="pswd_match">Password must match</span>*@
